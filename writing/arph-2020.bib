@article{jalal2018,
  title = {Changing Dynamics of the Drug Overdose Epidemic in the {{United States}} from 1979 through 2016},
  author = {Jalal, Hawre and Buchanich, Jeanine M. and Roberts, Mark S. and Balmert, Lauren C. and Zhang, Kun and Burke, Donald S.},
