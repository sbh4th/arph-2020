@article{wickham2020,
  title = {Effects on Mental Health of a {{UK}} Welfare Reform, {{Universal Credit}}: A Longitudinal Controlled Study},
  shorttitle = {Effects on Mental Health of a {{UK}} Welfare Reform, {{Universal Credit}}},
