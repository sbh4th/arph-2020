  shorttitle = {Did the {{Great Recession}} Affect Mortality Rates in the Metropolitan {{United States}}?},
  author = {Strumpf, Erin C. and Charters, Thomas J. and Harper, Sam and Nandi, Arijit},
  year = {2017},
