@article{rudolph2020,
  title = {The {{Relative Economy}} and {{Drug Overdose Deaths}}},
  author = {Rudolph, Kara E. and Kinnard, Elizabeth N. and Aguirre, Ariadne Rivera and Goin, Dana E. and Feelemyer, Jonathan and Fink, David and Cerda, Magdalena},
  year = {2020},
