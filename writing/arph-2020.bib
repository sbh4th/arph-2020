  author = {Shiels, Meredith S. and Chernyavskiy, Pavel and Anderson, William F. and Best, Ana F. and Haozous, Emily A. and Hartge, Patricia and Rosenberg, Philip S. and Thomas, David and Freedman, Neal D. and {Berrington de Gonzalez}, Amy},
