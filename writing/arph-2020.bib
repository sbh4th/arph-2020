  keywords = {Aged,Body Mass Index,Confounding Factors; Epidemiologic,Female,Humans,Male,Middle Aged,Multivariate Analysis,Obesity,Overweight,Proportional Hazards Models,Prospective Studies,Risk,Risk Factors,Thinness,United States},
