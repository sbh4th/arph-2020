@article{mensahgeorgea.2017,
  title = {Decline in {{Cardiovascular Mortality}}},
  author = {{Mensah George A.} and {Wei Gina S.} and {Sorlie Paul D.} and {Fine Lawrence J.} and {Rosenberg Yves} and {Kaufmann Peter G.} and {Mussolino Michael E.} and {Hsu Lucy L.} and {Addou Ebyan} and {Engelgau Michael M.} and {Gordon David}},
