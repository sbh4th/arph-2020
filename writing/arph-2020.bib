@article{montez2019,
  title = {Educational {{Disparities}} in {{Adult Mortality Across U}}.{{S}}. {{States}}: {{How Do They Differ}}, and {{Have They Changed Since}} the {{Mid}}-1980s?},
  shorttitle = {Educational {{Disparities}} in {{Adult Mortality Across U}}.{{S}}. {{States}}},
  author = {Montez, Jennifer Karas and Zajacova, Anna and Hayward, Mark D. and Woolf, Steven H. and Chapman, Derek and Beckfield, Jason},
  year = {2019},
  month = apr,
  volume = {56},
  pages = {621--644},
  issn = {1533-7790},
  doi = {10.1007/s13524-018-0750-z},
  abstract = {Adult mortality varies greatly by educational attainment. Explanations have focused on actions and choices made by individuals, neglecting contextual factors such as economic and policy environments. This study takes an important step toward explaining educational disparities in U.S. adult mortality and their growth since the mid-1980s by examining them across U.S. states. We analyzed data on adults aged 45\textendash 89 in the 1985\textendash 2011 National Health Interview Survey Linked Mortality File (721,448 adults; 225,592 deaths). We compared educational disparities in mortality in the early twenty-first century (1999\textendash 2011) with those of the late twentieth century (1985\textendash 1998) for 36 large-sample states, accounting for demographic covariates and birth state. We found that disparities vary considerably by state: in the early twenty-first century, the greater risk of death associated with lacking a high school credential, compared with having completed at least one year of college, ranged from 40 \% in Arizona to 104 \% in Maryland. The size of the disparities varies across states primarily because mortality associated with low education varies. Between the two periods, higher-educated adult mortality declined to similar levels across most states, but lower-educated adult mortality decreased, increased, or changed little, depending on the state. Consequently, educational disparities in mortality grew over time in many, but not all, states, with growth most common in the South and Midwest. The findings provide new insights into the troubling trends and disparities in U.S. adult mortality.},
  file = {/Users/samharper/Zotero/storage/QIW8HRP2/Montez et al. - 2019 - Educational Disparities in Adult Mortality Across .pdf},
  journal = {Demography},
  language = {en},
  number = {2}
}

