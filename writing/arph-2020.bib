@article{siddiqi2019,
  title = {Growing Sense of Social Status Threat and Concomitant Deaths of Despair among Whites},
  author = {Siddiqi, Arjumand and {Sod-Erdene}, Odmaa and Hamilton, Darrick and Cottom, Tressie McMillan and Darity, William},
